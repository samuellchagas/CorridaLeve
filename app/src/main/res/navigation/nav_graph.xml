<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.corridaleve.fragments.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/splash_fragment">
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.corridaleve.fragments.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/login_fragment">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.corridaleve.fragments.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/home_fragment">
        <action
            android:id="@+id/action_homeFragment_to_screenRunFragment"
            app:destination="@id/screenRunFragment" />
        <action
            android:id="@+id/action_homeFragment_to_historicFragment"
            app:destination="@id/historicFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.corridaleve.fragments.RegisterFragment"
        android:label="RegisterFragment"
        tools:layout="@layout/register_fragment">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/screenRunFragment"
        android:name="com.example.corridaleve.fragments.ScreenRunFragment"
        android:label="ScreenRunFragment"
        tools:layout="@layout/screen_run_fragment">
        <action
            android:id="@+id/action_screenRunFragment_to_historicFragment"
            app:destination="@id/historicFragment" />
    </fragment>
    <fragment
        android:id="@+id/historicFragment"
        android:name="com.example.corridaleve.fragments.HistoricFragment"
        android:label="HistoricFragment"
        tools:layout="@layout/historic_fragment"/>
</navigation>